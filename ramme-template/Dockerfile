FROM alpine

ENV RAMME-TEMPLATE_HOST 0.0.0.0
ENV RAMME-TEMPLATE_HTTP_PORT 8080
ENV RAMME-TEMPLATE_HTTP_SECONDARY_PORT 8081
ENV RAMME-TEMPLATE_GRPC_PORT 6560
ENV RAMME-TEMPLATE_LOG_LEVEL 0

EXPOSE 8080
EXPOSE 8081
EXPOSE 6560

COPY certs /etc/ssl/certs/
COPY bin/linux-amd64/ramme-template /

CMD ["/ramme-template"]
